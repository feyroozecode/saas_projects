                        parameters: '340B',
                        releaseDate: 'May 2023',
                        docsUrl: '#'
                    },
                    {
                        id: 3,
                        name: 'Stable Diffusion XL',
                        provider: 'Stability AI',
                        category: 'Image',
                        description: 'Advanced text-to-image model generating high-resolution, photorealistic images from text prompts.',
                        tags: ['Text-to-Image', 'Diffusion'],
                        parameters: '2.3B',
                        releaseDate: 'Jun 2023',
                        docsUrl: '#'
                    },
                    {
                        id: 4,
                        name: 'Claude 2',
                        provider: 'Anthropic',
                        category: 'Text',
                        description: 'Constitutional AI assistant focused on helpfulness, honesty, and harmlessness.',
                        tags: ['LLM', 'Chat', 'Safety'],
                        parameters: '137B',
                        releaseDate: 'Jul 2023',
                        docsUrl: '#'
                    },
