    <script>
        const { createApp, ref, computed } = Vue;

        createApp({
            setup() {
                const searchQuery = ref('');
                const activeTab = ref('all');
                
                const tabs = [
                    { id: 'all', name: 'All Models', icon: 'fas fa-boxes' },
