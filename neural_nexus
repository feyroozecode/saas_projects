                    },
                    {
                        id: 8,
                        name: 'GPT-4 Vision',
                        provider: 'OpenAI',
                        category: 'Multimodal',
                        description: 'Multimodal model that understands images and text, enabling visual question answering.',
                        tags: ['Vision', 'Text', 'Multimodal'],
                        parameters: '1.8T',
                        releaseDate: 'Sep 2023',
                        docsUrl: '#'
                    },
                    {
                        id: 9,
                        name: 'MusicGen',
                        provider: 'Meta',
                        category: 'Audio',
                        description: 'Simple and controllable model for music generation conditioned on text descriptions.',
                        tags: ['Text-to-Music', 'Generation'],
                        parameters: '3.3B',
                        releaseDate: 'Jun 2023',
                        docsUrl: '#'
                    }
                ];

                const filteredModels = computed(() => {
                    let result = models;
                    
                    // Filter by search query
                    if (searchQuery.value) {
                        const query = searchQuery.value.toLowerCase();
                        result = result.filter(model => 
                            model.name.toLowerCase().includes(query) || 
                            model.provider.toLowerCase().includes(query) ||
                            model.description.toLowerCase().includes(query) ||
                            model.tags.some(tag => tag.toLowerCase().includes(query))
                        );
                    }
                    
                    // Filter by active tab
                    if (activeTab.value !== 'all') {
                        result = result.filter(model => 
                            model.category.toLowerCase() === activeTab.value
                        );
                    }
                    
                    return result;
                });

                const filterModels = () => {
                    // The computed property will automatically update
                };

                return {
                    searchQuery,
                    activeTab,
                    tabs,
                    filteredModels,
                    filterModels
                };
            }
        }).mount('#app');
    </script>
</body>
</html>
